{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowACMForCertificates",
      "Effect": "Allow",
      "Action": [
        "acm:RequestCertificate",
        "acm:DescribeCertificate",
        "acm:ListCertificates",
        "acm:AddTagsToCertificate",
        "acm:DeleteCertificate"
      ],
      "Resource": "arn:aws:acm:eu-central-1:447555627930:certificate/*"
    },
    {
      "Sid": "AllowRoute53HostedZoneChange",
      "Effect": "Allow",
      "Action": [
        "route53:ChangeResourceRecordSets",
        "route53:GetHostedZone",
        "route53:ListHostedZonesByName",
        "route53:ListResourceRecordSets"
      ],
      "Resource": "arn:aws:route53:::hostedzone/Z05678082RBZES6D13RG3"
    }
  ]
}
