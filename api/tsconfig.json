{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./types", "../node_modules/@types"],
    "outDir": "../dist-api"
  },
  "include": ["./**/*.ts", "./**/*.d.ts"],
  "exclude": ["../node_modules", "./**/*.spec.ts"]
}
